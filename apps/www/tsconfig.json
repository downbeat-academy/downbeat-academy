{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "@*": [
        "*"
      ],
      "@api/*": [
        "pages/api/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@lib/*": [
        "app/lib/*"
      ],
      "@hooks/*": [
        "app/hooks/*"
      ],
      "@styles/*": [
        "app/styles/*"
      ],
      "@types/*": [
        "app/types/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
      "@app/*": [
        "app/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "hooks/useFathom.tsx",
    ".next/types/**/*.ts",
    "src/app/[slug]"
  ],
  "exclude": [
    "node_modules"
  ]
}