{
  // TypeScript configuration specifically for Cypress tests
  // This extends the main app config while providing Cypress-specific types and settings
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node", "cypress-axe"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "isolatedModules": false,
    // Inherit path mappings from parent config but ensure they work from cypress directory
    "baseUrl": "../",
    "paths": {
      "@*": ["src/*"],
      "@api/*": ["src/app/api/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@app/*": ["src/app/*"],
      "@actions/*": ["src/actions/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src/cypress.d.ts",
    "support/index.d.ts"
  ],
  "exclude": [
    "../node_modules",
    "../.next"
  ]
}