{
  "name": "cadence-core",
  "version": "2.3.0",
  "description": "Core component library for Downbeat Academy and the Cadence Design System.",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "pnpm run clean && pnpm run build:js && pnpm run build:types",
    "build:js": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "storybook": "storybook dev -p 6006 --ci",
    "build:storybook": "storybook build",
    "build-storybook": "storybook build",
    "test": "vitest",
    "build-publish-storybook": "pnpm run build:storybook && pnpm run chromatic",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "keywords": [],
  "author": {
    "name": "Jory Tindall",
    "email": "jory@downbeatacademy.com",
    "url": "https://downbeatacademy.com"
  },
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.esm.js"
    },
    "./styles.css": "./dist/cadence-core.min.css"
  },
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "cadence-icons": "workspace:^",
    "cadence-tokens": "workspace:^",
    "chromatic": "^13.1.3",
    "classnames": "^2.3.2",
    "postcss": "^8.5.1",
    "postcss-modules": "^6.0.1",
    "postcss-preset-env": "^10.1.3",
    "rollup": "^4.46.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-scss": "^4.0.1",
    "sass": "^1.83.4",
    "storybook": "^8.6.14",
    "string-hash": "^1.1.3",
    "typescript": "^5.7.3",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^5.4.6",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-hover-card": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tooltip": "1.1.6",
    "cadence-icons": "workspace:^",
    "cadence-tokens": "workspace:^",
    "classnames": "^2.5.1",
    "typeface-favorit": "workspace:^",
    "typeface-tiempos-text": "workspace:^"
  }
}