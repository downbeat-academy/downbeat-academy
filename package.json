{
  "name": "@downbeat-academy/downbeat-academy",
  "author": "Jory Tindall <jory@downbeatacademy.com>",
  "description": "Monorepo for Downbeat Academy applications and packages, including the Cadence Design System.",
  "keywords": [
    "music",
    "design system",
    "education",
    "nextjs",
    "vite",
    "react",
    "cadence"
  ],
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "react:dev": "turbo run dev --filter=cadence-react",
    "react:build": "turbo run build --filter=cadence-react",
    "icons:dev": "turbo run dev --filter=cadence-icons",
    "icons:build": "turbo run build --filter=cadence-icons",
    "www:dev": "turbo run dev --filter=www",
    "www:build": "turbo run build --filter=www",
    "docs:dev": "turbo run dev --filter=cadence-docs",
    "docs:build": "turbo run build --filter=cadence-docs",
    "cms:dev": "turbo run dev --filter=sanity-cms",
    "cms:build": "turbo run build --filter=sanity-cms",
    "tokens:build": "turbo run build --filter=cadence-tokens",
    "wc:dev": "pnpm --filter cadence-web start",
    "wc:build": "pnpm --filter cadence-web build",
    "cadence-react:build": "pnpm --filter cadence-react build",
    "components:build": "pnpm wc:build && pnpm cadence-react:build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@types/prettier": "^2.7.2",
    "prettier": "^2.8.8",
    "turbo": "^1.9.3"
  },
  "dependencies": {
    "next": "13.0.7"
  }
}