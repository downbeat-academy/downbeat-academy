{
  "name": "@downbeat-academy/downbeat-academy",
  "author": "Jory Tindall <jory@downbeatacademy.com>",
  "description": "Monorepo for Downbeat Academy applications and packages, including the Cadence Design System.",
  "keywords": [
    "music",
    "design system",
    "education",
    "nextjs",
    "vite",
    "react",
    "cadence"
  ],
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "packageManager": "pnpm@8.14.0",
  "scripts": {
    "format": "prettier --write .",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "dev:fresh": "pnpm build:packages && turbo run dev",
    "icons:dev": "turbo run dev --filter=cadence-icons",
    "icons:build": "turbo run build --filter=cadence-icons",
    "www:dev": "turbo run dev --filter=www",
    "www:build": "turbo run build --filter=www",
    "www:cypress": "pnpm --filter=www cypress",
    "cms:dev": "turbo run dev --filter=cms-sanity",
    "cms:build": "turbo run build --filter=cms-sanity",
    "links:dev": "turbo run dev --filter=cadence-links",
    "links:build": "turbo run build --filter=cadence-links",
    "auth:dev": "turbo run dev --filter=auth",
    "auth:build": "turbo run build --filter=auth",
    "tokens:build": "turbo run build --filter=cadence-tokens",
    "email:dev": "turbo run dev --filter=email",
    "core:storybook": "turbo run storybook --filter=cadence-core",
    "core:build-storybook": "turbo run build:storybook --filter=cadence-core",
    "core:publish": "turbo run build-publish-storybook --filter=cadence-core",
    "core:build": "turbo run build --filter=cadence-core"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2"
  }
}